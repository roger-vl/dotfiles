;; variables
(defvar

tap-time 200
hold-time 200
)

;; Aliases are referred to by `@<alias_name>`.
(defalias

  a (tap-hold $tap-time $hold-time a lsft)
  ; (tap-hold $tap-time $hold-time ; rsft)


  r (tap-hold $tap-time $hold-time r lctl)
  u (tap-hold $tap-time $hold-time u rctl)

  w (tap-hold $tap-time $hold-time w lalt)
  o (tap-hold $tap-time $hold-time o ralt)

  ehype (tap-hold $tap-time $hold-time e (multi lsft lctl lalt lmet)) ;; E Hyper key
  f-s-one (tap-hold $tap-time $hold-time f (layer-toggle symbolsone)) ;; layer symbos one
  s-s-two (tap-hold $tap-time $hold-time s (layer-toggle symbolstwo)) ;; layer symbos two
  d-num (tap-hold $tap-time $hold-time d (layer-toggle numbers)) ;; layer numbers
  v-misc (tap-hold $tap-time $hold-time v (layer-toggle misc)) ;; layer misc

  lp (unicode "(")
  rp (unicode ")")
  la (unicode "!")
  sq (unicode "'")
  as (unicode "*")
  am (unicode "&")
  un (unicode "_")
  ar (unicode "@")
  pr (unicode "%")
  ti (unicode "~")
  pi (unicode "|")
  ca (unicode "^")
  do (unicode "$")
  nu (unicode "#")

  dq (unicode r#"""#)

  ;; layer-switch changes the base layer.
